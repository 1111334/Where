VALUES ('Lettuce', 5.00, false, true, true, true, 100);

INSERT INTO INGREDIENT (NAME, PRICE, CONTAINS_LACTOSE, VEGETARIAN, VEGAN, GLUTEN_FREE, CALORIES)
VALUES ('Yoghurt', 2.00, true, true, false, true, 150);

INSERT INTO INGREDIENT (NAME, PRICE, CONTAINS_LACTOSE, VEGETARIAN, VEGAN, GLUTEN_FREE, CALORIES)
VALUES ('Steak', 22.00, true, true, false, true, 700);

SELECT * FROM INGREDIENT WHERE PRICE < 15;
SELECT * FROM INGREDIENT WHERE VEGETARIAN;
SELECT * FROM INGREDIENT WHERE CALORIES > 500;
SELECT * FROM INGREDIENT WHERE PRICE >= 15 AND PRICE <= 16;
SELECT * FROM INGREDIENT WHERE CONTAINS_LACTOSE = true AND GLUTEN_FREE = true;
SELECT * FROM INGREDIENT WHERE PRICE < 15 OR CALORIES > 600;
SELECT * FROM INGREDIENT WHERE VEGAN = true OR GLUTEN_FREE = true;
SELECT * FROM INGREDIENT WHERE NAME = 'Pesto Pasta';
SELECT * FROM INGREDIENT WHERE NOT CONTAINS_LACTOSE;
SELECT * FROM INGREDIENT WHERE PRICE > 20 AND CALORIES < 800;